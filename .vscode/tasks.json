{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "presentation": {
                "focus": true,
            },
            "command": "docker compose -f compose.yml -f compose.debug.yml build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "type": "shell",
            "isBackground": true,
            "presentation": {
                "focus": true,
                "panel": "new",
            },
            "command": "docker compose -f compose.yml -f compose.debug.yml watch",
        },
        {
            "label": "down",
            "type": "shell",
            "presentation": {
                "focus": true,
            },
            "command": "docker compose down",
        },
        {
            "label": "restart",
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "close": true
            },
            "command": "docker compose -f compose.yml -f compose.debug.yml restart fisa-bot",
        },
        {
            "label": "wait",
            "type": "shell",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "close": true
            },
            "command": "sleep 0.5",
        }
    ]
}
