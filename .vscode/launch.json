    "configurations": [
        {
            "name": "debug",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                }
            ],
            "preLaunchTask": "wait",
            "postDebugTask": "restart"
        }
    ]
}
